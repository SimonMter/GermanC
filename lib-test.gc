#beinhalte <stdio.h>

strukturen Punkt {
    fließkommazahl x;
    fließkommazahl y;
};

nichtig verschiebe_punkt(strukturen Punkt* p, fließkommazahl dx, fließkommazahl dy) {
    p->x += dx;
    p->y += dy;
    soferne(dx == dy && dy == 69){
        schreibe("funny number :");
    }
}

ganzzahl ursprung() {
    strukturen Punkt p1 = {0.0, 0.0};
    strukturen Punkt p2 = {10.0, 5.0};
    ganzzahl auswahl;
    fließkommazahl dx, dy;
    soferne(1 == 0 || 2 gleich 4){
        schreibe("test");
    }
    schreibe("Wählen Sie 1 Operation:\n");
    schreibe("1: Verschiebe Punkt 1\n");
    schreibe("2: Verschiebe Punkt 2\n");
    schreibe("3: Beenden\n");
    scanner("%d", &auswahl);

    fallunterscheidung (auswahl) {
        fall 1:
            schreibe("Geben Sie die Verschiebung für Punkt 1 (dx, dy): ");
            scanner("%f %f", &dx, &dy);
            verschiebe_punkt(&p1, dx, dy);
            schreibe("Punkt 1 verschoben zu (%.2f, %.2f)\n", p1.x, p1.y);
            unterbrech;
        fall 2:
            schreibe("Geben Sie die Verschiebung für Punkt 2 (dx, dy): ");
            scanner("%f %f", &dx, &dy);
            verschiebe_punkt(&p2, dx, dy);
            schreibe("Punkt 2 verschoben zu (%.2f, %.2f)\n", p2.x, p2.y);
            unterbrech;
        fall 3:
            schreibe("Programm wird beendet...\n");
            zurück 0;
        standardfall:
            schreibe("Ungültige Auswahl, versuche es erneut.\n");
            unterbrech;
    }
    
    schreibe("hallo");
    schreibe("%d", 400711);
    schreibe("Punkt 1: (%.2f, %.2f)\n", p1.x, p1.y);
    schreibe("Punkt 2: (%.2f, %.2f)\n", p2.x, p2.y);
    
    ganzzahl zaehler = 1;
    
    während (zaehler < 4) {
        zaehler++;
        schreibe("Möchten Sie fortfahren? (1 = Ja, 0 = Nein): ");
        scanner("%d", &auswahl); 
        soferne (auswahl == 1) {
            schreibe("Wählen Sie eine weitere Operation:\n");
            schreibe("1: Verschiebe Punkt 1\n");
            schreibe("2: Verschiebe Punkt 2\n");
            schreibe("3: Beenden\n");
            scanner("%d", &auswahl);

            fallunterscheidung (auswahl) {
                fall 1:
                    schreibe("Geben Sie die Verschiebung für Punkt 1 (dx, dy): ");
                    scanner("%f %f", &dx, &dy);
                    verschiebe_punkt(&p1, dx, dy);
                    schreibe("Punkt 1 verschoben zu (%.2f, %.2f)\n", p1.x, p1.y);
                    weitergehen;
                fall 2:
                    schreibe("Geben Sie die Verschiebung für Punkt 2 (dx, dy): ");
                    scanner("%f %f", &dx, &dy);
                    verschiebe_punkt(&p2, dx, dy);
                    schreibe("Punkt 2 verschoben zu (%.2f, %.2f)\n", p2.x, p2.y);
                    weitergehen;
                fall 3:
                    schreibe("Programm wird beendet...\n");
                    zurück 0;
                standardfall:
                    schreibe("Ungültige Auswahl, versuche es erneut.\n");
                    unterbrech;
            }
        }
        andernfalls {
            schreibe("Programm wird beendet...\n");
            zurück 0;
        }
    }

    zurück 0;
}
